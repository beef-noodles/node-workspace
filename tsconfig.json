{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "packages",
      "outDir": "./dist"
    },
    "include": [
      "packages/**/*.ts"
    ],
    "references": [
      { "path": "packages/shared-lib" },
      { "path": "packages/app" }
    ]
  }